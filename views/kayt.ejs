<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/intlTelInput.css" />
    <meta charset="UTF-8">
    <script src="/js/script.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ElCasino | Kayıt Ol</title>
</head>
<body>
    <h1>Kayıt Ol</h1>
    <form action="/kayit" method="POST" id="kayitForm">
        <div id="kullaniciAdi">
            <label  >Kullanıcı adı:</label>
            <input type="text" id="kullaniciAdi" name="kullaniciAdi" required>
            <% if (error) { %>
                <div id="kullaniciAdi_error" style="color: red;">
                    <%= message %>
                </div>
            <% } %>
        <div>
            <label for="ad">Adınız:</label>
            <input type="text" id="ad" name="ad" required>
        </div>

        <div>
            <label for="soyad">Soyad:</label>
            <input type="text" id="soyad" name="soyad" required>
        </div>
        <input id="telefon" name="telefon" type="tel">
        <div>
            <label for="tcKimlik">Tc kimilk:</label>
            <input type="text" id="tcKimlik" name="tcKimlik" required>
        </div>
        <div>
            <label for="email">E-posta:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div>
            <label for="sifre">Şifre:</label>
            <input type="password" id="sifre" name="sifre" required>
        </div>
        <div>
            <label for="sifreOnay">Şifre Onay:</label>
            <input type="password" id="sifreOnay" name="sifreOnay" required>
        </div>
        <div>
            <button type="submit">Kayıt Ol</button>
        </div>
    </form>
    
    <script src="/js/intlTelInput.min.js"></script>
    <script>
        document.querySelector("#kullaniciAdi").addEventListener("input", (e) => {
            document.querySelector("#kullaniciAdi_error").remove();
        })
        var input = document.querySelector("#telefon")
        intlTelInput(input, {
            utilsScript: 'js/utils.js',
            initialCountry: "tr", // Varsayılan olarak Türkiye'yi getir
            nationalMode: false // otomatik olarak input'a ekle
        })

        
    </script>
</body>
</html>